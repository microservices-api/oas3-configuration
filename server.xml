<server description="OpenAPI Programming Model Sample">

	<!-- Enable features -->
	<featureManager>
		<feature>openapi-3.0</feature>
		<feature>jaxrs-2.0</feature>
	</featureManager>

	<httpEndpoint httpPort="9080" httpsPort="9443" id="defaultHttpEndpoint" host="*" />

	<!-- Automatically expand WAR files and EAR files -->
	<applicationManager autoExpand="true" />

	<webApplication id="sample.oas.programmingModels" location="sample.oas.programmingModels.war" name="sample.oas.programmingModels">
		<classloader apiTypeVisibility="spec,ibm-api,api,stable,third-party"></classloader>
	</webApplication>
</server>